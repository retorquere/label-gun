{
  "name": "label-gun",
  "version": "3.0.6",
  "private": true,
  "description": "automatic issue labeler",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run package",
    "format-check": "prettier --check **/*.ts",
    "lint": "echo eslint src/**/*.ts",
    "package": "tsc --noEmit && ncc build --source-map --license licenses.txt src/main.ts -o dist",
    "preversion": "npm start && git add -u",
    "postversion": "git push --follow-tags",
    "test": "echo jest",
    "start": "npm run build && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/typescript-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "@octokit/request-error": "^3.0.3",
    "@octokit/rest": "^19.0.7",
    "@octokit/webhooks": "^11.0.0",
    "@octokit/webhooks-definitions": "^3.65.6",
    "fast-safe-stringify": "^2.1.1",
    "rools": "^2.3.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/node": "^18.16.3",
    "@typescript-eslint/parser": "^5.59.1",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.39.0",
    "eslint-plugin-github": "^4.7.0",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^29.5.0",
    "jest-circus": "^29.5.0",
    "prettier": "2.8.8",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
