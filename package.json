{
  "name": "label-gun",
  "version": "3.1.0",
  "private": true,
  "description": "automatic issue labeler",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run package",
    "format-check": "prettier --check **/*.ts",
    "lint": "dprint fmt src/*.ts && dprint check src/*.ts",
    "package": "tsc --noEmit && ncc build --source-map --license licenses.txt src/main.ts -o dist",
    "preversion": "npm start && git add -u",
    "postversion": "git push --follow-tags",
    "test": "echo test",
    "start": "npm run build && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/typescript-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "@octokit/request-error": "^6.1.6",
    "@octokit/rest": "^21.1.0",
    "@octokit/webhooks": "^13.4.2",
    "@octokit/webhooks-types": "^7.6.1",
    "fast-safe-stringify": "^2.1.1",
    "rools": "^2.3.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.7",
    "@vercel/ncc": "^0.38.3",
    "dprint": "^0.48.0",
    "prettier": "3.4.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}
